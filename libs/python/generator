#! /usr/bin/env python
from libs.python.helperGenerator import BTPUSECASE_GEN

#######################################################################################
# Initialize the tool and fetch the BTP service list
#######################################################################################
generator = BTPUSECASE_GEN()
generator.fetchEntitledServiceList()
generator.addSchemaInfoToServiceList()
generator.addNumSection()


mainDataJson = "./config/btp-base/entitledServices.json"
#######################################################################################
# Generate all files
#######################################################################################
targetFilename = mainDataJson
templateFile = "./config/btp-base/templates/ENTITLEDSERVICES.json"
generator.applyServiceListOnTemplate(templateFile, targetFilename)

targetFilename = "./docs/PARAMETERS-BTPSA.md"
templateFile = "./config/docs/templates/PARAMETERS-BTPSA.md"
generator.applyServiceListOnTemplate(templateFile, targetFilename)

targetFilename = "./docs/PARAMETERS-SERVICES.md"
templateFile = "./config/docs/templates/PARAMETERS-SERVICES.md"
generator.applyServiceListOnTemplate(templateFile, targetFilename)
